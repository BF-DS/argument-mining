digraph {
	MajorClaims [label="MajorClaim(s)" shape=record style=rounded]
	subgraph cluster_claims {
		style=dashed
		"Claim 1" [label="Claim 1" shape=record style=rounded]
		"Claim 2" [label="Claim 2" shape=record style=rounded]
		label=Claims
	}
	subgraph cluster_premises {
		style=dashed
		"Premise 1" [label="Premise 1" shape=record style=rounded]
		"Premise 2" [label="Premise 2" shape=record style=rounded]
		label=Premises
	}
	rankdir=RL
	"Claim 1" -> MajorClaims [label=against color=red]
	"Claim 2" -> MajorClaims [label=for color=green]
	"Premise 1" -> "Claim 1" [label=attack color=red]
	"Premise 2" -> "Claim 1" [label=support color=green]
	"Premise 1" -> "Premise 2" [label=attack color=red]
	"Premise 2" -> "Premise 1" [label=support color=green]
}
