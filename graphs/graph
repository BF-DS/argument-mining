digraph {
	Hauptaussage [label="Hauptaussage(n)" shape=record style=rounded]
	subgraph cluster_claims {
		style=dashed
		"Behauptung 1" [label="Behauptung 1" shape=record style=rounded]
		"Behauptung 2" [label="Behauptung 2" shape=record style=rounded]
		label=Behauptungen
	}
	subgraph cluster_premises {
		style=dashed
		"Prämisse 1" [label="Prämisse 1" shape=record style=rounded]
		"Prämisse 2" [label="Prämisse 2" shape=record style=rounded]
		label="Prämissen"
	}
	rankdir=RL
	"Behauptung 1" -> Hauptaussage [label=against color=red]
	"Behauptung 2" -> Hauptaussage [label=for color=green]
	"Prämisse 1" -> "Behauptung 1" [label=attack color=red]
	"Prämisse 2" -> "Behauptung 1" [label=support color=green]
	"Prämisse 1" -> "Prämisse 2" [label=attack color=red]
	"Prämisse 2" -> "Prämisse 1" [label=support color=green]
}
